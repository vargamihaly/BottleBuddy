    }
  },
  "Frontend": {
    "BaseUrl": "https://victorious-water-0d5f77603.3.azurestaticapps.net"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://bottlebuddy-production-web.azurewebsites.net",
