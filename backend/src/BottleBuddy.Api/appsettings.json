{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=bottlebuddy;Username=postgres;Password="
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "Jwt": {
    "Key": "",
    "Issuer": "BottleBuddyApi",
    "Audience": "BottleBuddyApi"
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "BottleBuddy.Api"
    },
    "LevelSwitches": {
      "$seqControl": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://localhost:5341",
                "apiKey": "",
                "controlLevelSwitch": "$seqControl"
              }
            }
          ]
        }
      }
    ]
  }
}
