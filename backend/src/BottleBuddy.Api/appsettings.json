{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=bottlebuddy;User Id=sa;Password=YourStrong!Passw0rd123;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "Jwt": {
    "Key": "",
    "Issuer": "BottleBuddyApi",
    "Audience": "BottleBuddyApi"
  },
  "SendGrid": {
    "ApiKey": "",
    "FromEmail": "noreply@bottlebuddy.com",
    "FromName": "BottleBuddy"
  },
  "Frontend": {
    "BaseUrl": "http://localhost:5173"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "BottleBuddy.Api"
    },
    "LevelSwitches": {
      "$seqControl": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://localhost:5341",
                "apiKey": "",
                "controlLevelSwitch": "$seqControl"
              }
            }
          ]
        }
      }
    ]
  }
}
